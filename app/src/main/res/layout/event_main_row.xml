<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:cardBackgroundColor="#0A0A0A"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/event_row_card"
            android:layout_marginBottom="2dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="2dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:background="@drawable/rounded_five"

                    android:id="@+id/view3" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pdate_textView"
                    android:textColor="@android:color/black"
                    android:textSize="38sp"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/view3"
                    app:layout_constraintEnd_toEndOf="@+id/view3" android:fontFamily="@font/basic" android:text="33"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/month_textView"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/pdate_textView"
                    android:textAllCaps="true"
                    app:layout_constraintEnd_toEndOf="@+id/pdate_textView" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:textColor="@android:color/black"
                    android:fontFamily="@font/basic"
                    app:layout_constraintTop_toBottomOf="@+id/pdate_textView"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventTitle_textView"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:lines="2"
                    app:layout_constraintStart_toEndOf="@+id/view3" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/basic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/pdate_textView" android:layout_marginTop="8dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" app:srcCompat="@drawable/lokasi"
                    android:id="@+id/imageView14" app:layout_constraintStart_toStartOf="@+id/eventTitle_textView"
                    app:layout_constraintTop_toTopOf="@+id/lokasi_textView"
                    app:layout_constraintBottom_toBottomOf="@+id/lokasi_textView" android:adjustViewBounds="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lokasi_textView"
                    android:textColor="@android:color/darker_gray" android:textSize="12sp"
                    android:lines="1"
                    app:layout_constraintStart_toEndOf="@+id/imageView14" android:fontFamily="@font/basic"
                    app:layout_constraintTop_toBottomOf="@+id/eventTitle_textView" android:layout_marginTop="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>