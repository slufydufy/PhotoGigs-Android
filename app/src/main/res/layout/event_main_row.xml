<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="#000000">

    <View
            android:id="@+id/divider2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/main_imageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/speed"
            android:id="@+id/imageView15"
            app:layout_constraintStart_toStartOf="@+id/eventTitle_textView"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/eventTitle_textView"/>
    <TextView
            android:text="date"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/pdate_textView"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@+id/imageView15"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView15"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"
            app:layout_constraintVertical_bias="0.0" android:textSize="14sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/mainlogin"
            android:id="@+id/main_imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/divider2" app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view3"
            android:background="#40000000"
            app:layout_constraintTop_toTopOf="@+id/main_imageView"
            app:layout_constraintStart_toStartOf="@+id/main_imageView"
            app:layout_constraintEnd_toEndOf="@+id/main_imageView"
            app:layout_constraintBottom_toBottomOf="@+id/main_imageView"/>
    <TextView
            android:text="title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/eventTitle_textView" app:layout_constraintStart_toEndOf="@+id/main_imageView"
            android:layout_marginStart="16dp" android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/main_imageView" android:textSize="14sp"
    />
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/baseline_favorite_border_white_24dp"
            android:id="@+id/imageView16"
            app:layout_constraintStart_toStartOf="@+id/imageView14"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView14"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/imageView16"
            app:layout_constraintBottom_toBottomOf="@+id/imageView16"
            app:layout_constraintStart_toEndOf="@+id/imageView16"
            android:layout_marginStart="8dp"
            android:id="@+id/newsMain_row_pp_recyclerView"/>
    <TextView
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView19"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/newsMain_row_pp_recyclerView"
            app:layout_constraintBottom_toBottomOf="@+id/newsMain_row_pp_recyclerView"
            app:layout_constraintStart_toEndOf="@+id/newsMain_row_pp_recyclerView"
            android:background="@drawable/rounded_button"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/baseline_chat_bubble_outline_white_24dp"
            android:id="@+id/imageView17"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView16"
            app:layout_constraintStart_toStartOf="@+id/imageView16" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="comment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/eventMain_comment_textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView17"
            android:textColor="@android:color/darker_gray" app:layout_constraintBottom_toBottomOf="@+id/imageView17"
            app:layout_constraintStart_toEndOf="@+id/imageView17" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp" app:srcCompat="@drawable/round_location_on_white_24dp"
            android:id="@+id/imageView14"
            app:layout_constraintStart_toStartOf="@+id/eventTitle_textView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView15"/>
    <TextView
            android:text="lokasi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView18"
            app:layout_constraintTop_toTopOf="@+id/imageView14"
            app:layout_constraintBottom_toBottomOf="@+id/imageView14"
            app:layout_constraintStart_toEndOf="@+id/imageView14" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@android:color/darker_gray" android:textSize="14sp"/>
</android.support.constraint.ConstraintLayout>