<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="#F4F4F4">

    <TextView
            android:text="Contact :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:fontFamily="@font/quicksand" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textColor="@android:color/black"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/infos_textView" app:layout_constraintStart_toEndOf="@+id/textView17"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView17" android:fontFamily="@font/quicksand"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>
    <Button
            android:text="Call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/call_button" app:layout_constraintStart_toStartOf="@+id/textView17"
            app:layout_constraintEnd_toEndOf="@+id/infos_textView"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/infos_textView"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="#101010" android:textColor="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>