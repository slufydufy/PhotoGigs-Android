<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="#282828">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorAccent" android:textSize="18sp" android:textStyle="bold"
            android:fontFamily="@font/quicksand"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/today_tV" app:layout_constraintStart_toStartOf="@+id/name_textView"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="@font/quicksand_light"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name_textView" android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>