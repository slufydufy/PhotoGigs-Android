<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="24sp"
            android:textColor="@android:color/white" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:id="@+id/textView_email_login"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/rounded_black_textview"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textColorHint="@android:color/darker_gray" android:singleLine="true"
            android:textColor="@android:color/darker_gray"/>

    <EditText
            android:id="@+id/textView_pass_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_black_textview"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="@+id/textView_email_login"
            app:layout_constraintStart_toStartOf="@+id/textView_email_login"
            app:layout_constraintTop_toBottomOf="@+id/textView_email_login"
            android:textColorHint="@android:color/darker_gray" android:singleLine="true"
            android:textColor="@android:color/darker_gray"/>

    <Button
            android:id="@+id/button_login"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_green"
            android:text="LogIn"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/textView_pass_login"
            app:layout_constraintStart_toStartOf="@+id/textView_pass_login"
            app:layout_constraintTop_toBottomOf="@+id/textView_pass_login"/>
    <TextView
            android:text="Belum punya akun ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/button_login"
            android:textColor="@android:color/white"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/quicksand"/>
    <TextView
            android:text="Daftar disini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/daftar_textView"
            android:textColor="#00FF90"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/textView4"/>
</android.support.constraint.ConstraintLayout>