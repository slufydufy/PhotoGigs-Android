<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="#000000">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/profile_pic_imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userName_textView"
            app:fontFamily="@font/basic"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/profile_pic_imageView"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="@+id/profile_pic_imageView"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/date_textView"
            app:layout_constraintBottom_toBottomOf="@+id/profile_pic_imageView"
            app:layout_constraintStart_toEndOf="@+id/profile_pic_imageView"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:fontFamily="@font/basic"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/googleg_standard_color_18"
            android:id="@+id/post_main_imageView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_pic_imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter" android:adjustViewBounds="true"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/commenticon"
            android:id="@+id/comment_imageView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/post_main_imageView"
            app:layout_constraintStart_toEndOf="@+id/like_imageView" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp" app:srcCompat="@drawable/likeicon"
            android:id="@+id/like_imageView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/post_main_imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/story_textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:fontFamily="@font/basic"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/comment_imageView" android:layout_marginBottom="32dp"/>
</android.support.constraint.ConstraintLayout>