<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="#000000">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mainlogin"
            android:id="@+id/imageView14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:adjustViewBounds="true"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/speed"
            android:id="@+id/imageView15"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView14"
            app:layout_constraintEnd_toStartOf="@+id/textView17"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageView15"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"
            android:textColor="@android:color/darker_gray"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView15"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:lines="3"
            android:textColor="@android:color/darker_gray"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/baseline_favorite_border_white_24dp"
            android:id="@+id/imageView16"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            app:layout_constraintStart_toStartOf="@+id/textView18"
    />
    <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/imageView16"
            app:layout_constraintBottom_toBottomOf="@+id/imageView16"
            app:layout_constraintStart_toEndOf="@+id/imageView16"
            android:layout_marginStart="8dp"
            android:id="@+id/newsMain_row_pp_recyclerView"/>
    <TextView
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView19"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/newsMain_row_pp_recyclerView"
            app:layout_constraintBottom_toBottomOf="@+id/newsMain_row_pp_recyclerView"
            app:layout_constraintStart_toEndOf="@+id/newsMain_row_pp_recyclerView"
            android:background="@drawable/rounded_button"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/baseline_chat_bubble_outline_white_24dp"
            android:id="@+id/imageView17"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            app:layout_constraintEnd_toStartOf="@+id/textView20"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="comment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView20"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageView17"
            app:layout_constraintBottom_toBottomOf="@+id/imageView17" android:textColor="@android:color/darker_gray"/>
    <TextView
            android:text="Challenge"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/textView21"
            android:background="@drawable/rounded_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" android:textStyle="bold"
            android:textSize="14sp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>